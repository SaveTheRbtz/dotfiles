[alias]
	tree = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	vimdiff = difftool
	up = "!git remote update -p; git merge --ff-only @{u}"
[user]
	name = Alexey Ivanov
	email = SaveTheRbtz@GMail.com
[color]
	ui = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[branch]
	autosetuprebase = always
[push]
	default = tracking
[pull]
	rebase = preserve
[gc]
	auto = 1
[format]
	pretty = format:"%C(auto,yellow)commit %C(auto)%H%d\nAuthor: %an <%ae>\nDate:   %cd\n\n%w(0,4,4)%B"
[log]
	date = local
